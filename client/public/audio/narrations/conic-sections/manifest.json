    },
    {
      "script_id": "conic-sections",
      "section_id": "parabola",
      "line_id": "parabola-2",
      "filename": "parabola-parabola-2.mp3",
      "path": "audio/narrations/conic-sections/xiaoxiao/parabola-parabola-2.mp3",
      "duration": 1.51,
      "size": 24192,
